generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        String[]
  imageUrl    String?
  link        String?
  createdAt   DateTime @default(now())
}

model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  description String
  createdAt   DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
